<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Styles pour les cartes -->
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="CardStyleSmall" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- Styles pour les boutons -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="ButtonStyleSmall" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">12sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="ButtonStyleOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="strokeColor">@color/text_tertiary</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Styles pour les textes -->
    <style name="TextStyleTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="TextStyleSubtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextStyleBody" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextStyleCaption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_tertiary</item>
    </style>

    <!-- Styles pour les champs de saisie -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Styles pour les icÃ´nes -->
    <style name="IconStyle" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- Styles pour les conteneurs -->
    <style name="ContainerStyle">
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="CardContainerStyle">
        <item name="android:padding">20dp</item>
        <item name="android:background">@color/surface</item>
    </style>
</resources>
