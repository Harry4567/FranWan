<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <!-- App Bar avec titre et bouton paramètres -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/appTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FranWan"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/appUserText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Utilisateur: Harry456"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/settingsButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_manage"
                android:contentDescription="Paramètres"
                android:tint="@color/text_secondary"
                android:scaleType="fitCenter"
                android:padding="12dp" />
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenu principal -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Carte du prochain cours -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface"
                app:strokeColor="@color/primary_light"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        android:tint="@color/primary"
                        android:layout_marginBottom="12dp"
                        android:contentDescription="Icône horloge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prochain Cours"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/nextCourseText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aucun cours à venir"
                        android:textSize="20sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/nextCourseTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:textColor="@color/text_tertiary"
                        android:gravity="center"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/timeLeftText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:textColor="@color/accent"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/simulateNotificationButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Simuler Notification"
                        android:textSize="14sp"
                        app:cornerRadius="8dp"
                        app:backgroundTint="@color/primary"
                        android:textColor="@color/white" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Grille des actions principales -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actions Rapides"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- Première ligne -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/manageScheduleButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:text="Gérer EDT"
                        android:textSize="14sp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/secondary"
                        android:textColor="@color/white" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/dailyChangesButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:text="Modifications Journalières"
                        android:textSize="14sp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/accent"
                        android:textColor="@color/white" />
                </LinearLayout>

                <!-- Deuxième ligne -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/importPdfButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:text="Importer PDF"
                        android:textSize="14sp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/info"
                        android:textColor="@color/white" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bulkDeleteButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:text="Supprimer Massivement"
                        android:textSize="14sp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/error"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <!-- Configuration des rappels -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Configuration des Rappels"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/setDailyReminderTimeButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Heure Rappel Modifications"
                            android:textSize="12sp"
                            app:cornerRadius="8dp"
                            app:backgroundTint="@color/secondary"
                            android:textColor="@color/white"
                            android:layout_marginEnd="6dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/setReminderDelayButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Délai: 5 min"
                            android:textSize="12sp"
                            app:cornerRadius="8dp"
                            app:backgroundTint="@color/accent"
                            android:textColor="@color/white"
                            android:layout_marginStart="6dp" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/setCourseDaysButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Jours de cours"
                        android:textSize="14sp"
                        app:cornerRadius="8dp"
                        app:backgroundTint="@color/info"
                        android:textColor="@color/white" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Sélecteur de semaine -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/currentWeekIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Semaine 1 active"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/week1Button"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Semaine 1"
                            android:textSize="14sp"
                            app:cornerRadius="20dp"
                            app:backgroundTint="@color/primary"
                            android:textColor="@color/white"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/week2Button"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Semaine 2"
                            android:textSize="14sp"
                            app:cornerRadius="20dp"
                            app:backgroundTint="@color/surface_light"
                            android:textColor="@color/text_primary"
                            app:strokeColor="@color/text_tertiary"
                            app:strokeWidth="1dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Boutons supplémentaires -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/vacationPauseButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Pause Vacances: Désactivée"
                    android:textSize="14sp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/surface_light"
                    android:textColor="@color/text_primary"
                    app:strokeColor="@color/text_tertiary"
                    app:strokeWidth="1dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/requestBatteryOptimizationButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Vérifier Optimisation Batterie"
                    android:textSize="14sp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/warning"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- Emploi du temps d'aujourd'hui -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/todayScheduleTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emploi du Temps - Aujourd'hui"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/todayScheduleRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_class" />

                    <TextView
                        android:id="@+id/noClassTodayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pas de cours prévu pour aujourd'hui"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:padding="20dp"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Version de l'application -->
            <TextView
                android:id="@+id/appVersionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="12sp"
                android:textColor="@color/text_tertiary"
                tools:text="Version: 1.04" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
